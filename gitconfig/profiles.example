# GPG
# Sign commits with 1Password on Github
# https://developer.1password.com/docs/ssh/git-commit-signing/
[user]
  name = First Last
  email = email@domain.com
  signingkey = ssh-ed25519 ...

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
  gpgsign = true